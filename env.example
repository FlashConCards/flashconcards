# Firebase Configuration
# Obtenha essas credenciais no console do Firebase: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (para deletar usuários do Auth)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Mercado Pago Configuration
# Obtenha essas credenciais no painel do Mercado Pago: https://www.mercadopago.com.br/developers
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=your_public_key
MERCADOPAGO_ACCESS_TOKEN=your_access_token

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# App Configuration
NEXT_PUBLIC_APP_NAME=FlashConCards
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Email Configuration (Escolha uma opção)

# Opção 1: Resend (Mais profissional)
# Obtenha sua API key em: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Opção 2: Brevo (Mais simples - RECOMENDADO)
# Obtenha sua API key em: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here

# Opção 3: Gmail (Mais simples ainda - 100% GRATUITO)
# Siga as instruções no arquivo google-apps-script-code.js
GOOGLE_APPS_SCRIPT_URL=your_google_apps_script_url_here 